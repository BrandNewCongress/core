<link href="https://fonts.googleapis.com/css?family=Oleo+Script:400,700|Roboto" rel="stylesheet">

<div class="body">
  <div class="header" id="top">
    <div class="logo-container">
      <img class="logo" src="<%= static_path(@conn, "/images/m4a-logo.png") %>" />
    </div>
    <div class="contact-bar">
      <div class="top-share">
        <a href="https://facebook.com/justicedemocrats" target="_blank">
          <img src="<%= static_path(@conn, "/images/m4a-facebook.png") %>" />
        </a>
        <a href="https://twitter.com/justicedems" target="_blank">
          <img src="<%= static_path(@conn, "/images/m4a-twitter.png") %>" />
        </a>
        <a href="https://instagram.com/justicedemocrats" target="_blank">
          <img src="<%= static_path(@conn, "/images/m4a-instagram.png") %>" />
        </a>
      </div>

      <a target="_blank" class="contact-link" href="mailto:us@standup4medicare.com"> Contact Us</a>
    </div>
  </div>

  <div class="hero">
    <div class="title section-header">Why Medicare For All?</div>
    <div class="hero-body" style="padding-bottom: 100px;">
      <div class="hero-section">
        <div class="hero-section-inner">
          <img height="65" src="<%= static_path(@conn, "/images/m4a-join.png") %>" />
          <div class="title counter"><%= @count %></div>
          <div class="counter-description">
            People Have Spoken
          </div>
          <a target="_blank" class="button" style="margin-top: 10px;" href="https://twitter.com/intent/tweet?url=https://standup4medicare.com&text=Democrats should be standing up for medicare for all in 2018&via=justicedemocrats">
            <%= render "elevated-div.html", [uniq: "up", color: "#cd1041", content: "#StandUp4Medicare", padding: 15, width: 150, height: 30] %>
          </a>
        </div>
      </div>

      <div class="hero-video">
        <%= render "youtube-embed.html", [width: 560, height: 320, youtube_id: @primary_video_id] %>
      </div>
      <div class="hero-section" style="padding-top: 25px; padding-bottom: 25px;">
        <div class="secondary-title">
          Running for Congress Or Serving a District?
        </div>
        <a target="_blank" href="https://form.jotform.us/72198762117159" class="button" style="margin-top: 15px; margin-bottom: 15px;">
          <%= render "elevated-div.html",
            [uniq: "pld-1", color: "#cd1041", content: "Pledge", padding: 15,
             width: 100, height: 45, extra_styles: "font-family: Roboto; font-weight: bold;"] %>
        </a>
        <div style="font-size: 18px; font-family: Roboto;">Take the Pledge and Stand With 2/3 of Americans</div>
      </div>
    </div>
  </div>


  <div class="section" id="why-stand-up" >
    <div class="title section-header">Why Stand Up?</div>
    <div class="two-column">

      <div id="column-1">
        <%= render "elevated-div.html",
          [uniq: "time", color: "", shadow_color: "#f4f4f4", padding: 40,
           width: 450, height: 285, no_hover: true,
           template: "box1.html", box_1_header: @box_1_header, box_1_text: @box_1_text] %>

        <div class="circle-container">
          <%= render "elevated-div.html",
            [uniq: "cr1", color: "", shadow_color: "#f4f4f4", padding: 40,
             width: 202, height: 202, no_hover: true, extra_styles: "border-radius: 50%;",
             shadow_color: "#e1e0e3", template: "cr1.html",
             circle_1_header: @circle_1_header, circle_1_text: @circle_1_text] %>

          <%= render "elevated-div.html",
            [uniq: "cr2", color: "", shadow_color: "#f4f4f4", padding: 40,
             width: 202, height: 202, no_hover: true, extra_styles: "border-radius: 50%;",
             shadow_color: "#e1e0e3", template: "cr2.html",
             circle_2_header: @circle_2_header, circle_2_text: @circle_2_text] %>
       </div>

        <h3 style="font-family: Roboto;	font-size: 32px; font-style: italic; font-weight: 900; line-height: 30px;">
          #StandUp4Medicare
        </h3>
       <%= render "elevated-div.html",
            [uniq: "tweet", color: "", shadow_color: "#f4f4f4", padding: 40,
             width: 450, height: 600, no_hover: true, shadow_color: "#d7d7d7",
             template: "tweet-stream.html"] %>
     </div>


      <div id="column-2">
        <h3 style="font-family: Roboto;	font-size: 32px; font-style: italic; font-weight: 900; line-height: 30px;">
          Watch the Video:
        </h3>

        <%= render "elevated-div.html",
          [uniq: "vid-2", color: "", shadow_color: "#f4f4f4", padding: 40,
           width: 460, height: 280, no_hover: true, secondary_video_id: @secondary_video_id,
           shadow_color: "#d7d7d7", template: "video.html"] %>

        <%= render "elevated-div.html",
          [uniq: "pressure", color: "", shadow_color: "#f4f4f4", padding: 40,
           width: 460, height: 285, no_hover: true,
           template: "box2.html", box_2_header: @box_2_header, box_2_text: @box_2_text] %>

        <div class="button">
        <%= render "elevated-div.html",
          [uniq: "watch-more-button", color: "#cd1041", shadow_color: "#302D32",
           padding: 10, height: 45, width: 250, template: "more-videos.html"]%>
        </div>

         <div class="circle-container">
           <%= render "elevated-div.html",
             [uniq: "cr3", color: "", shadow_color: "#f4f4f4", padding: 40,
              width: 202, height: 202, no_hover: true, extra_styles: "border-radius: 50%;",
              shadow_color: "#e1e0e3", template: "cr3.html",
              circle_3_header: @circle_3_header, circle_3_text: @circle_3_text] %>

           <%= render "elevated-div.html",
             [uniq: "cr4", color: "", shadow_color: "#f4f4f4", padding: 40,
              width: 202, height: 202, no_hover: true, extra_styles: "border-radius: 50%;",
              shadow_color: "#e1e0e3", template: "cr4.html",
              circle_4_header: @circle_4_header, circle_4_text: @circle_4_text] %>
         </div>
       </div>

    </div>
  </div>

  <div id="#cta">
    <div class="title section-header">Here's How You Can Help</div>

    <div class="cta-content">
      We've compiled a resource kit that we'll keep updated as our campaign progresses â€“
      whether your a congressperson, a member of the press, have an online following,
      or just a motivated citizen, this resource guide has everything you need
      to make transform your energy into concrete actions towards Medicare for All.

      <a target="_blank" class="button" style="margin-top: 10px;" href="https://docs.google.com/document/d/1Jk35RVlNUyD7ZO7wsHE_GEbm0uLI4nMYnfLTGLKrJYY/edit">
        <%= render "elevated-div.html", [uniq: "resource-kit", color: "#cd1041", content: "See the Resource Kit", padding: 15, width: 250, height: 30] %>
      </a>
    </div>
  </div>

  <div id="pledge-tally" style="height: 1100px; overflow: hidden;">
		<div id="standup-app"></div>
  </div>

  <div style="width: 100%; display: flex; align-items: center; flex-direction: column; margin-left: auto; margin-right: auto; background-color: #f4f4f4;">
    <div class="title section-header" id="video-pledges" >
      Watch the Pledges
    </div>

		<%= for p <- @pledges |> Enum.slice(0, length(@pledges) + 1) do %>
      <div class="pledge-container">
        <div
          class="pledge-video-container"
        >
          <%= render "youtube-embed.html", [width: 560, height: 320, youtube_id: p.youtube_id] %>
				</div>
        <div class="pledge-info-container">
          <div class="pledge-info-box">
            <div class="standing-up">Standing Up</div>

            <div class="pledger-info">
              <div class="name-position-container">
                <div class="name">
                  <%= p.name %>
                </div>
                <div class="position">
                  <%= "#{p.position} #{p.district}" %>
                </div>
              </div>
            </div>

            <div class="pledger-share">
              <a href="<%= p.twitter %>" target="_blank">
                <img src="<%= static_path(@conn, "/images/m4a-twitter.png") %>" />
              </a>
              <a href="<%= p.facebook %>" target="_blank">
                <img src="<%= static_path(@conn, "/images/m4a-facebook.png") %>" />
              </a>
              <a href="<%= p.instagram %>" target="_blank">
                <img src="<%= static_path(@conn, "/images/m4a-instagram.png") %>" />
              </a>
            </div>
          </div>

          <div class="pledge-text" style="text-align: left; padding: 5px;">
						<%= raw(p.content) %>
					</div>
        </div>
      </div>
		<% end %>
  </div>

  <div class="footer" id="top">
    <div class="site-map">
      <a href="#top"> Top </a>
      <a href="#why-stand-up"> Why Stand Up </a>
      <a href="#cta"> How You Can Help </a>
      <a href="#pledge-tally"> Pledge Tally </a>
      <a href="#video-pledges"> Video Pledges </a>
    </div>

    <div class="bottom-logo-container">
      <img class="logo" src="<%= static_path(@conn, "/images/m4a-logo.png") %>" />
      <div class="paid-for" href="https://justicedemocrats.com" target="_blank">
        Paid for by Justice Democrats
      </div>
    </div>

    <div class="right-buttons">
      <a target="_blank" class="button" style="margin-top: 10px;"
        href="https://twitter.com/intent/tweet?url=https://standup4medicare.com&text=Democrats%20should%20be%20standing%20up%20for%20medicare%20for%20all%20in%202018&via=justicedemocrats">
        <%= render "elevated-div.html",
          [uniq: "up", color: "#cd1041", content: "#StandUp4Medicare", padding: 15,
           width: 150, height: 30, extra_styles: "font-family: Roboto; font-weight: bold;"] %>
      </a>

      <a target="_blank" href="https://form.jotform.us/72198762117159" class="button" style="margin-top: 15px; margin-bottom: 15px;">
        <%= render "elevated-div.html",
          [uniq: "pld-2", color: "#cd1041", content: "Make the Pledge", padding: 15,
           width: 150, height: 30, extra_styles: "font-family: Roboto; font-weight: bold;"] %>
      </a>

      <div class="icon-buttons">
        <a href="mailto:us@standup4medicare.com" target="_blank">
          <img src="<%= static_path(@conn, "/images/m4a-mail.png") %>" />
        </a>
        <a href="https://facebook.com/justicedemocrats" target="_blank">
          <img src="<%= static_path(@conn, "/images/m4a-facebook.png") %>" />
        </a>
        <a href="https://twitter.com/justicedems" target="_blank">
          <img src="<%= static_path(@conn, "/images/m4a-twitter.png") %>" />
        </a>
        <a href="https://instagram.com/justicedemocrats" target="_blank">
          <img src="<%= static_path(@conn, "/images/m4a-instagram.png") %>" />
        </a>
      </div>
    </div>
  </div>
</div>

<script>
	window.pledges = <%= raw(@pledges_json) %>
</script>

<script defer="defer" src="<%= static_path(@conn, "/js/standup.js") %>"></script>

