<div style="padding: 40px;">
  <%= raw(@content) %>
</div>

<script>

  function showHiddenContent (ev) {
    var el = document.querySelector('#vol-event');
    if (el.style.display == 'hidden') {
      el.style.display = 'block';
    } else {
      el.style.display = 'none';
    }
  }

  var button = document.querySelector('#show-events');

  if (button) {
    button.onlick = showHiddenContent;
  }

</script>
